<div class="container registerContainer">
    <div class="card m-3 p-4">
        {{#if message}}
            <div class="list-group">
                <a href="#!" class="list-group-item list-group-item-action list-group-item-danger">{{this.message}}</a>
            </div>
        {{/if}}
        <br>
        <h2>Sign up</h2>
        <br>
        <form name="registerForm" action="/signup" method="POST">
            <div class="form-group">
                <label>Email:</label>
                <input class="border form-control" type="email" name="email" required/>
            </div>
            <div class="form-group">
                <label>Username:</label>
                <input class="border form-control" type="text" name="username" required/>
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input class="border form-control" type="password" name="password" required/>
            </div>
            <div>
                <input class="btn btn-success" type="submit" value="Register User"/>
            </div>
        </form>
    </div>
</div>
